{
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "extends": [
    "google"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "rules": {
    "semi": ["error", "always"],
    "comma-dangle": ["error", "never"],
    "ignoreComments": true,
    "ignoreStrings": true,
    "ignoreTemplateLiterals": true,
    "no-console": "warn",
    "indent": [
      "error",
      2, 
      { "SwitchCase": 1 }
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "object-curly-spacing": ["error", "always"]
  }
}
